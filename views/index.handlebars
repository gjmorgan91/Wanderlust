    <div id="map"></div>
    <script>
      var map;

      var results;
      function initMap() {
        var infowindow = new google.maps.InfoWindow(); /* SINGLE */
        map = new google.maps.Map(document.getElementById('map'), {
          zoom: 3,
          minZoom: 3,
          center: new google.maps.LatLng(20,-28),
          mapTypeId: 'roadmap'
        });

        var script = document.createElement('script');

        script.src = 'js/airports.js';
        document.getElementsByTagName('head')[0].appendChild(script);

        function placeMarker(pin) {
          var coords = pin.coordinates;
          var price = pin.price;
          var days_until = pin.days_until;
          var latLng = new google.maps.LatLng(coords[0],coords[1]);

          if (priceInRange(price) == false) {
            return false;
          }

          if (dateInRange(days_until) == false) {
            return false;
          }

          var marker = new google.maps.Marker({
            position: latLng,
            map: map
          });

          google.maps.event.addListener(marker, 'click', function(){
            infowindow.close(); // Close previously opened infowindow
            // generate URL to Google Flights for relevant search query
            infowindow.setContent( "<div id='infowindow'>"+ "<div><img src='" + pin.image +"' alt='TEST' height='300px'></div><h3>" + pin.place +"</h3></div>" + "<div><h5>Est Low Price: $" + pin.price + "</h5></div>" + "<div><h5>Date: " + pin.date + "</h5></div>" + "<a target='_blank' href='https://www.google.com/flights/#search;f=" + "SAN" + ";t=" + pin.iata + ";d=" + pin.date + ";tt=o" + ";mp=" + pin.price + "'><button type='button' style='margin-right:10px' class='btn btn-primary'>Buy Tickets Now!</button></a>" + "<a target='_blank' href='https://www.airbnb.com/s/"+pin.place+"/homes?checkin=2017-07-03&checkout=2017-07-10" +"'><button type='button' class='btn btn-default' style='margin-right:10px'>Search AirBnBs</button></a><a href='" + pin.trip + "'><button type='button' class='btn btn-default'>Explore Attractions</button></a></div>");
            infowindow.open(map, marker);
          });
        }

        // <button type="button" class="btn btn-primary"></button>


        // Loop through the results array and place a marker for each
        // set of coordinates.
        window.eqfeed_callback = function(results) {
          for (var i = 0; i < results.airports.length; i++) {
            placeMarker(results.airports[i]);
          }
        }
      }

      // google.maps.event.addDomListener(window, 'load', initMap);
    </script>
